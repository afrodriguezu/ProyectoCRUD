<div class="container">
    <div class="row my-5">
        <h3 class="text-center text-uppercase p-2"> Lista de Productos </h3>

        {{#if productos}}

            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class="col-4"> Nombre     </th>
                        <th scope="col"> Descripcion </th>
                        <th scope="col"> Precio      </th>
                        <th scope="col"> Cantidad    </th>
                        <th scope="col"> Talla       </th>
                        <th scope="col"> Imagen      </th>
                        <th scope="col"> Acciones    </th>
                    </tr>
                </thead>
                <tbody>
                    
                    {{#each productos}}
                        <tr>
                            <td> {{nombre}} </td>
                            <td> {{descripcion}} </td>
                            <td> {{precio}} </td>
                            <td> {{cantidad}} </td>
                            <td> {{talla}} </td>
                            <td>
                                <img src="/uploads/{{imagen}}" class="card-img-top mx-auto m-2 rounded-circle" style="width: 150px; height: 150px;display:block;">
                            </td>
                            <td>  
                                <div class="btn-group">
                                    <a href="/edit/{{id}}" class="btn btn-warning p-2">
                                        <i class="fa-solid fa-pencil"></i>
                                    </a>
                                    <a href="/delete/{{id}}" class="btn btn-danger p-2">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                    
                </tbody>
            </table>

        {{else}}
            <div class="card text-center mx-auto">
                <div class="card-header">
                    <h3> Crear un producto </h3>
                </div>
                <div class="card-body">
                    <p> Presiona este boton para que pueda registrar un nuevo producto en la aplicacion</p>
                    <a href="/add" class="btn btn-primary"> Ir a crear </a>
                </div>
            </div>
        {{/if}}

    </div>
</div>